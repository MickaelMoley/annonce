{% extends 'base.html.twig' %}
{% block head %}
     {{ parent() }}

{% endblock %}
{% block title %} Site d'annonces auto {% endblock %}

{% block body %}

    <div class="wrapper">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col"></div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="bg-white shadow-sm d-lg-none mb-3 p-3 sticky-top" id="meta-mobile-sticky-top">
                            <div class="row">
                                <div class="col-4"><img class="img-fluid"
                                                        src="assets/img/945e78faa559e12f855194ab70c6ed37a5dfa7ee.jpg">
                                </div>
                                <div class="col-8">
                                    <h2 class="meta-mobile-title">{{ annonce.title }}</h2><span
                                            class="text-info text-primary font-weight-bold">{{ annonce.price | number_format(2,'.',',') }} €</span>
                                </div>
                            </div>
                        </div>
                        <div class="carousel slide" data-ride="carousel" id="annonce-collection-image">
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active"><img class="w-100 d-block"
                                                                       src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png"
                                                                       alt="Slide Image"></div>
                                <div class="carousel-item"><img class="w-100 d-block"
                                                                src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png"
                                                                alt="Slide Image"></div>
                                <div class="carousel-item"><img class="w-100 d-block"
                                                                src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png"
                                                                alt="Slide Image"></div>
                            </div>
                            <div><a class="carousel-control-prev" href="#annonce-collection-image" role="button"
                                    data-slide="prev"><span class="carousel-control-prev-icon"></span><span
                                            class="sr-only">Previous</span></a><a class="carousel-control-next"
                                                                                  href="#annonce-collection-image"
                                                                                  role="button" data-slide="next"><span
                                            class="carousel-control-next-icon"></span><span class="sr-only">Next</span></a>
                            </div>
                            <ol class="carousel-indicators">
                                <li data-target="#annonce-collection-image" data-slide-to="0" class="active"></li>
                                <li data-target="#annonce-collection-image" data-slide-to="1"></li>
                                <li data-target="#annonce-collection-image" data-slide-to="2"></li>
                            </ol>
                        </div>
                        <div class="border rounded shadow-sm mb-3 p-3" id="meta">
                            <h1 class="annonce-title">{{ annonce.title }}</h1><span
                                    class="text-info text-primary font-weight-bold">{{ annonce.price | number_format(2,'.',',') }} €</span>
                        </div>
                        <div id="caracteristique" class="mb-3">
                            <div class="card">
                                <div class="card-header d-flex justify-content-start align-items-center">
                                    <h3 class="card-title">Caractéristiques</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-lg-6">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i class="fas fa-car-side mr-2"></i>Catégorie</span><span>{{ annonce.bodyStyle }}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i
                                                                class="fas fa-car mr-2"></i>Marque</span><span
                                                            class="text-muted">{{ annonce.make }}</span></li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i class="fas fa-car-alt mr-2"></i>Modèle</span><span>{{ annonce.model }}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i class="fas fa-hashtag mr-2"></i>Référence</span><span>{{ annonce.vehicleId }}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i
                                                                class="fas fa-calendar-day mr-2"></i>Mise en circulation&nbsp;</span><span>{{ annonce.year }}</span>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i class="fas fa-gas-pump mr-2"></i>Carburant&nbsp;</span><span>{{ annonce.fuelType }}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i class="fas fa-road mr-2"></i>Kilométrage</span><span>{{ annonce.mileage['value'] | number_format(0,'',' ') }} km</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i
                                                                class="fas fa-cog mr-2"></i>Boîte</span><span>{{ annonce.transmission }}</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between"><span
                                                            class="text-primary"><i class="fas fa-palette mr-2"></i>Couleur extérieur</span><span>{{ annonce.exteriorColor }}</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="divers">
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab"
                                                        href="#description">Description</a></li>
                                <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" href="#options">Options</a>
                                </li>
                                <li class="nav-item"><a class="nav-link active" role="tab" data-toggle="tab"
                                                        href="#note">Note du vendeur</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane p-3" role="tabpanel" id="description">
                                    <p class="text-primary">Vends clio 4 dci 90 cv energy année 28/12/2014<br>4cv tres
                                        propre rouge flamme<br>Historique des revisions<br>Distribution faite chez
                                        Renault a 150000kms<br>GPS clim auto 4 vitres électriques<br>Radar de
                                        recul..<br></p>
                                </div>
                                <div class="tab-pane p-3" role="tabpanel" id="options">
                                    <div class="row">
                                        <div class="col">
                                            <ul class="list-unstyled text-primary p-3">
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                            </ul>
                                        </div>
                                        <div class="col">
                                            <ul class="list-unstyled text-primary p-3">
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                                <li><i class="fas fa-check mr-2"></i>Item 1</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane active p-3" role="tabpanel" id="note">
                                    <p>Content for tab 3.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card text-primary bg-secondary border-1">
                            <div class="card-header border-primary">
                                <div class="media"><img class="rounded-circle mr-3 img-fluid"
                                                        src="https://www.vroomiz.fr/bundles/vrzfront/front/img/logo.png"
                                                        width="50rem">
                                    <div class="media-body">
                                        <h5>Vroomiz</h5><a href="#"><i class="fas fa-map-marker-alt mr-2"></i>Fay aux
                                            Loges</a></div>
                                </div>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="form-group"><label>Email</label><input class="form-control"
                                                                                       type="email"></div>
                                    <div class="form-group"><label>Téléphone</label><input class="form-control"
                                                                                           type="tel"></div>
                                    <div class="form-group"><label>Email</label><textarea class="form-control"
                                                                                          placeholder="Je suis intéressé par ce véhicule. Pouvez-vous me contacter afin de convenir d'un rendez-vous ?"
                                                                                          rows="6">Je suis intéressé par ce véhicule. Pouvez-vous me contacter afin de convenir d'un rendez-vous ?</textarea>
                                        <small
                                                class="form-text text-muted">Uniquement par particulier
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-primary btn-block" type="button"><i
                                                    class="fas fa-envelope mr-2"></i>Envoyer un message
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
